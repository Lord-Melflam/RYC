generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  department  String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  reviews     Review[]

  @@index([code])
  @@index([department])
}

model Review {
  id              String           @id @default(cuid())
  courseId        String
  course          Course           @relation(fields: [courseId], references: [id], onDelete: Cascade)
  rating          Int              // 1-5
  difficulty      Int              // 1-5
  workload        Int              // 1-5 (hours per week)
  comment         String?
  anonymousId     String           // Privacy-first: no user accounts, use generated anonymous IDs
  semester        String?
  year            Int?
  status          ModerationStatus @default(PENDING)
  flagCount       Int              @default(0)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  moderationFlags Flag[]

  @@index([courseId])
  @@index([status])
  @@index([createdAt])
}

model Flag {
  id        String   @id @default(cuid())
  reviewId  String
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  reason    String
  createdAt DateTime @default(now())

  @@index([reviewId])
}

enum ModerationStatus {
  PENDING
  APPROVED
  REJECTED
  FLAGGED
}
